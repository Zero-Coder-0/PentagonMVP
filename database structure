-- 1. PROFILES (Users with Roles)
create table profiles (
  id uuid references auth.users on delete cascade,
  email text,
  role text check (role in ('super_admin', 'tenant_admin', 'vendor', 'sales')),
  primary key (id)
);

-- 2. PROPERTIES ( The "Big" Table )
create table properties (
  id uuid default uuid_generate_v4() primary key,
  created_at timestamp with time zone default timezone('utc'::text, now()),
  
  -- Core Fields (Indexed for Fast Filtering)
  name text not null,
  developer_name text,
  status text check (status in ('Ready', 'Under Construction')),
  location_area text, -- e.g. "Whitefield"
  zone text, -- e.g. "East"
  lat float8,
  lng float8,
  
  -- Pricing & Config
  price_display text, -- "1.5 Cr"
  price_value numeric, -- 15000000 (for sorting)
  configurations text[], -- ['2BHK', '3BHK']
  
  -- ðŸš€ THE 50+ FIELDS (Stored as JSONB for flexibility)
  -- This handles RERA, Construction Type, Flooring, Water Source, etc.
  specs jsonb default '{}'::jsonb, 
  
  -- ðŸš€ AMENITIES (Dynamic List)
  amenities text[],
  
  -- ðŸš€ MEDIA (Imgur Links)
  images text[], -- ['https://i.imgur.com/xyz.jpg', ...]
  
  -- ðŸš€ DYNAMIC FEATURES (From your SchemaBuilder)
  dynamic_features jsonb default '{}'::jsonb
);
